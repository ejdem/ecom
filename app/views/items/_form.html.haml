= form_for @item, remote: true, html: {multipart: true}, authenticity_token: true  do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name, class: "form-control"
  .field
    = f.label :description
    %br/
    = f.text_area :description, class: "form-control"
  .field
    = f.label :price
    %br/
    = f.text_field :price, class: "form-control"
  .field
    = f.label :image
    %br/
    = f.file_field :image
  .actions
    %br/
    = f.submit "create", class: "btn btn-primary form-control"