%tr{id: "tr_#{item.id}"}
  %td
    = image_tag item.image
  %td
    = item.name
  %td
    = item.description 
  %td
    = item.price
  %td
    = item.category.name
  %td
    = item.user.name
  %td
    = link_to 'Show', item, class:"btn btn-primary btn-sm"
  %td
    - if can? :update, item
      = link_to 'Edit', edit_item_path(item), class:"btn btn-warning  btn-sm"
  %td
    - if can? :destroy, item
      = link_to 'Delete', item, method: :delete, class:"btn btn-danger btn-sm", remote: true, data: { confirm: 'Are you sure?' }