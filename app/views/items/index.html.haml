
%h1 Listing Items

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Price
      %th Seller
      %th{:colspan => "3"}
  %tbody
    - @items.each do |item|
      %tr
        %td = item.name
        %td = item.description 
        %td = item.price
        %td = item.user.name
        %td = link_to 'Show', item, class:"btn btn-primary"
        %td = link_to 'Edit', edit_item_path(item), class:"btn btn-warning"
        %td = link_to 'Destroy', item, method: :delete,class:"btn btn-danger",data: { confirm: 'Are you sure?' }

%br

= link_to 'New Item', new_item_path, class:"btn btn-primary"
