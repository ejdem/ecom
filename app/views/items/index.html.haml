%h4 Search
= form_tag items_path, method: 'get' do
  = hidden_field_tag :direction, params[:direction]
  = hidden_field_tag :sort,      params[:sort]
  = text_field_tag :search,      params[:search], class: "form-control"
  %br
  = submit_tag "search", name: nil, class: "btn btn-info"
%h4 Listing Items
= will_paginate @items
%table#items_table.table.table-hover.table-striped.bg-default
  %thead
    %tr
      %th image
      %th 
        = sorting "Name"
      %th Description
      %th
        = sorting "Price"
      %th Seller
      %th{:colspan => "3"}
        actions
  %tbody
    - @items.each do |item|
      = render "item", :item => item
= will_paginate @items
%br
- if can? :create, Item
  = link_to 'New Item', new_item_path, class:"btn btn-primary", id: "new_link", remote: true