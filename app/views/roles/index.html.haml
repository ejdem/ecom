%p#notice= notice
%h1 Listing Roles
%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th{:colspan => "3"}
  %tbody
    - @roles.each do |role|
      %tr
        %td= role.name
        %td= role.description
        %td= link_to 'Show', role, class:"btn btn-primary btn-sm"
        %td= link_to 'Edit', edit_role_path(role), class:"btn btn-primary btn-sm"
        %td= link_to 'Destroy', role, method: :delete,class:"btn btn-danger  btn-sm", data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Role', new_role_path
